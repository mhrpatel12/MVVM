<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryDark">@color/primary_dark_green</item>
        <item name="colorAccent">@color/accent_green</item>
        <item name="card_view_back_color">@color/colorBackCard_green</item>
        <item name="card_view_title_text_color">@color/primary_dark_green</item>
        <item name="android:colorBackground">@color/green_back</item>
        <item name="android:textColor">@color/primary_text_green</item>
        <item name="android:textColorPrimary">@color/primary_text_green</item>
        <item name="android:textColorSecondary">@color/secondary_text_green</item>
        <item name="colorControlNormal">@color/accent_green</item>
        <item name="colorControlActivated">@color/accent_green</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
